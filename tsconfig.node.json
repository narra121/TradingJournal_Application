{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "esnext",
    
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,       // Allow declaration files to be generated
  },
  "include": ["vite.config.ts"],
    "exclude": ["node_modules", "dist","src/**/*"]
}